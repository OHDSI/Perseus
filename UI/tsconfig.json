{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@app/*": ["src/app/*"],
      "@cdm/*": ["src/app/cdm/*"],
      "@comfy/*": ["src/app/cdm/comfy/*"],
      "@mapping/*": ["src/app/cdm/mapping/*"],
      "@code-mapping/*": ["src/app/cdm/code-mapping/*"],
      "@shared/*": ["src/app/shared/*"],
      "@popups/*": ["src/app/popups/*"],
      "@grid/*": ["src/app/grid/*"],
      "@scan-data/*": ["src/app/scan-data/*"],
      "@websocket/*": ["src/app/websocket/*"],
      "@vocabulary-search/*": ["src/app/vocabulary-search/*"],
      "@services/*": ["src/app/services/*"],
      "@models/*": ["src/app/models/*"],
      "@utils/*": ["src/app/utils/*"],
      "@guards/*": ["src/app/guards/*"],
      "@interceptors/*": ["src/app/interceptors/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "node_modules/rxjs/**",
      "node_modules/@angular/**"
    ]
  }
}
